# Epistula Environment Configuration
# Copy this file to .env and customize values

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
# Database password (CHANGE IN PRODUCTION!)
DB_PASSWORD=epistula_secure_password_2024

# Database port (default: 5432)
DB_PORT=5432

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
EPISTULA_ENV=development

# CORS allowed origins (comma-separated)
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
EPISTULA_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# JWT Secret Key (CHANGE IN PRODUCTION! Use a strong random string)
# Generate with: openssl rand -hex 32
SECRET_KEY=your_very_secret_jwt_key_change_in_production_min_32_chars

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# ROOT USER (Initial Setup Only)
# ============================================================================
# Root user credentials (created on first run)
ROOT_EMAIL=root@localhost
ROOT_PASSWORD=root_change_me_now

# ============================================================================
# SERVICE PORTS
# ============================================================================
# Backend API port
BACKEND_PORT=8000

# Frontend port
FRONTEND_PORT=3000

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8000
