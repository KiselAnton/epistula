[flake8]
# Maximum line length
max-line-length = 100

# Exclude specific directories from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    node_modules,
    migrations

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (PEP 8 updated guidance)
    W503,
    # E501: line too long (handled by max-line-length)
    # E501

# Select specific error codes to check
# E: PEP 8 errors
# F: PyFlakes errors
# W: PEP 8 warnings
# C: McCabe complexity
select = E,F,W,C90

# Maximum McCabe complexity
max-complexity = 10

# Show the source code that caused each error
show-source = True

# Show the relevant PEP 8 text for each error
show-pep8 = True

# Count the number of occurrences of each error/warning
count = True

# Print total number of errors
statistics = True

# Enable specific plugins (if installed)
# docstring-convention = google

# Per-file ignores (format: file:error1,error2)
# per-file-ignores =
#     __init__.py:F401
#     tests/*:E501
